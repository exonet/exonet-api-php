{
    "name": "exonet/exonet-api-php",
    "type": "library",
    "description": "PHP implementation of the Exonet API.",
    "keywords": [
        "exonet",
        "exonet-api-php"
    ],
    "homepage": "https://github.com/exonet/exonet-api-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Exonet",
            "email": "development@exonet.nl",
            "homepage": "https://exonet.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "<8.6",
        "guzzlehttp/guzzle": "^7.4",
        "psr/log": "^1.1|^2.0|^3.0",
        "ext-json": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "13.0.2"
    },
    "autoload": {
        "psr-4": {
            "Exonet\\Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exonet\\Api\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --testdox tests/"
    },
    "config": {
        "sort-packages": true
    }
}
